extends ../layout

block content
 .jumbotron
    .row.justify-content-center
        h1 Lista Bicicletas
 .container
    table.table.table-bordered.table-dark
        thead
            tr  
                th(scope='col') #
                th(scope='col') Color
                th(scope='col') Modelo
                th(scope='col') Ubicacion
                th(scope="col")
                th(scope='col')
        tbody
            each bici in bicis
                tr
                    td(scope='row')=bici.id
                    td= bici.color
                    td= bici.modelo
                    td= bici.ubicacion
                    td
                        a.btn.btn-warning(href='bicicletas/' + bici.id + '/update') Editar
                    td
                        form.inline(method='post' action='bicicletas/' + bici.id + '/delete')
                            input(type='hidden' name='id' value= bici.id)
                            button.btn.btn-danger.link-button(type='submit' name='submit_param' value='submit_value' class='btn')
                                = 'Eliminar'
    .row.justify-content-end
        a.btn.btn-primary(href="/bicicletas/create") Nueva Bicicleta    